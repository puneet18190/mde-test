<div class="dialog">
  <h1><%= t('users.reset_password.title') %></h1>
  <p><%= t('users.reset_password.description') %></p>
  <%= form_tag user_send_reset_password_path do |f| %>
    <%= label_tag 'email', t('users.email') %>:<br/> <%= email_field_tag :email, nil, id: 'email' %>
    <%= submit_tag t('users.reset_password.done').downcase %>
  <% end %>
  <p style="padding-top:30px">
    <%= link_to image_tag('logo_grigio.png'), root_path, :title => t('fullpage_notifications.back') %>
  </p>
</div>
