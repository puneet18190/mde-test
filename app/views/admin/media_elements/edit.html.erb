<div class="row-fluid">
  <div class="span12">
    <h3><%= t('admin.media_elements.edit') %></h3>
    <div id="new_elements_preview" class="well">
      <% if @private_elements.any? %>
        <div class="row-fluid">
          <% @private_elements.each_with_index do |element, index| %>
            <% if index % 4 == 0 %>
              </div>
              <div class="row-fluid">
            <% end %>
            <%= render :partial => 'media_element_update', :locals => {:element => element, :colspan => 3} %>
          <% end %>
        </div>
      <% else %>
        <%= t('admin.media_elements.empty') %>
      <% end %>
      <div class="clearfloat"></div>
    </div>
  </div>
</div>
