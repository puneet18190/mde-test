<% if @ok %>
  $('#element_<%= @media_element_id %> ._form_input').css('border-color', '#CCCCCC').css('color', '#555555');
  <% if @error_fields.nil? %>
    <% if @media_element.is_public %>
      window.location = '/admin/media_elements/edit';
    <% else %>
      $('#element_<%= @media_element_id %>').effect('highlight', {color: '#41A62A'}, 1500);
    <% end %>
  <% else %>
    <% @error_fields.each do |field| %>
      $('#element_<%= @media_element.id %> ._form_input[name=<%= field %>]').css('border-color', '#B94A48').css('color', '#B94A48');
    <% end %>
  <% end %>
<% end %>
