<%
  webm = ''
  mp4 = ''
  if media_element
    webm = media_element.webm_url
    mp4 = media_element.mp4_url
  end
%>

<video width="250" controls="controls">
  <source src="<%= mp4 %>" type="video/mp4">
  <source src="<%= webm %>" type="video/webm">
  <%= t('captions.dont_support_video') %>
</video>
