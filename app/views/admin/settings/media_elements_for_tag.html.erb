<div class="row-fluid">
  <div class="span12">
    <h3><%= t('admin.settings.tags.show.title', :tag => @tag.word).html_safe %></h3>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
    <table class="table table-striped table-bordered table-rounded">
      <thead>
        <tr>
          <th><%= t('admin.settings.tags.fields.id') %></th>
          <th><%= t('admin.settings.tags.fields.word') %></th>
          <th><%= t('admin.settings.tags.fields.created_at') %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @tag.id %></td>
          <td><%= @tag.word %></td>
          <td><%= TimeConvert.to_string @tag.created_at %></td>
          <td>
            <div class="btn-group pull-right">
              <a class="btn btn-small" data-method="delete" data-confirm="<%= t('admin.settings.tags.delete_confirm') %>" href="/admin/settings/tags/<%= @tag.id %>/delete?back_url=<%= '/admin/settings/tags'.html_safe %>">
                <i class="icon-remove"></i><%= t('admin.settings.tags.show.delete').downcase %>
              </a>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <h4><%= t('admin.settings.tags.show.media_elements', :tag => @tag.word).html_safe %></h4>
    <% if @media_elements.present? %>
      <%= render :partial => 'admin/list_heading', :locals => {:items => @media_elements, :expandable => false} %>
    <% end %>
    <%= render :partial => 'admin/media_elements/list', :locals => {:elements => @media_elements, :from_reporting => false} %>
    <% if @media_elements.present? %>
      <%= render :partial => 'admin/list_heading', :locals => {:items => @media_elements, :expandable => false} %>
    <% end %>
  </div>
</div>
