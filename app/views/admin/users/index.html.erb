<h4><%= t('admin.users.search.label') %></h4>
<%= form_tag 'users', :method => :get, :id => 'admin-search-users', :class => 'search-form' do %>
  <%= hidden_field_tag 'search[search_type]', 'users' %>
  <%= hidden_field_tag 'search[ordering]', '' %>
  <%= hidden_field_tag 'search[desc]', '' %>
  <div class="row-fluid">
    <div class="span12">
      <%= render :partial => 'admin/search/alerts' %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span4">
      <%= render :partial => 'admin/search/users_general', :locals => {:params => params[:search]} %>
    </div>
    <div class="span4">
      <%= render :partial => 'admin/search/date', :locals => {:params => params[:search]} %>
    </div>
    <div class="span4">
      <%= render :partial => 'admin/search/location', :locals => {:locations => @locations, :params => params[:search]} %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="form-actions">
        <button type="submit" class="btn btn-block"><%= t('admin.users.search.submit').upcase %></button>
      </div>
    </div>
  </div>
<% end %>

<h3><%= t('admin.users.title') %></h3>
<% if @users.present? %>
  <%= render :partial => 'admin/list_heading', :locals => {:items => @users, :expandable => false} %>
<% end %>
<%= render :partial => 'admin/users/list', :locals => {:users => @users} %>
<% if @users.present? %>
  <%= render :partial => 'admin/list_heading', :locals => {:items => @users, :expandable => false} %>
<% end %>
