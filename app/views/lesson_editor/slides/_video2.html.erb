<%
  video = slide.media_elements_at
%>

<div class="slide-content video2 normal-size">
  <%= form_tag save_slide_path(slide.lesson_id, slide.id), :method => :post, :remote => true, :id => "form-#{slide.id}", :autocomplete => 'off' do %>
    
    <div class="item video-container">
      <%= render :partial => 'lesson_editor/slides/parts/video', :locals => {:slide => slide, :video => video} %>
    </div>
    
  <% end %>
</div>
