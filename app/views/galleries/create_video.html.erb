<script>
  window.onload = function() {
    <% if @errors %>
      top.uploadDone('#load-gallery-video', <%= @errors.to_json.html_safe %>);
    <% else %>
      var html_content = "<%= j(render :partial => 'galleries/video', :locals => {:videos => @videos}) %>";
      top.uploadDone('#load-gallery-video', undefined, function() {
        top.reloadGalleryInLessonEditor('#load-gallery-video', 'video', html_content, <%= @tot_pages %>, <%= @videos.count %>);
      });
    <% end %>
  }
</script>
