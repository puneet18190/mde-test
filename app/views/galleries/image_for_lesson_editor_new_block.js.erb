$('#lesson_editor_image_gallery_container ._image_gallery_thumb._with_margin_bottom').css('margin-bottom', '0').removeClass('_with_margin_bottom');
<%
  images_count = @images.count
  images_count = ((images_count % 7 == 0) ? (images_count - 8) : ((images_count / 7) * 7 - 1))
%>
<% @images.each_with_index do |image, index| %>
  $('#lesson_editor_image_gallery_container #image_gallery_content .jspPane').append('<%= j(render(:partial => "galleries/thumbs/image", :locals => {:image => image, :index => index, :count => images_count, :force_margin_top => true})) %>');
<% end %>
$('#lesson_editor_image_gallery_container').data('page', <%= @page %>);
$('._select_image_from_gallery').addClass('_add_image_to_slide');
