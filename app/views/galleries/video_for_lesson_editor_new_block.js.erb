$('#lesson_editor_video_gallery_container ._video_gallery_thumb._with_margin_bottom').css('margin-bottom', '0').removeClass('_with_margin_bottom');
<%
  videos_count = @videos.count
  videos_count = ((videos_count % 3 == 0) ? (videos_count - 4) : ((videos_count / 3) * 3 - 1))
%>
<% @videos.each_with_index do |video, index| %>
  $('#lesson_editor_video_gallery_container #video_gallery_content .jspPane').append('<%= j(render(:partial => "galleries/thumbs/video", :locals => {:video => video, :index => index, :count => videos_count, :force_margin_top => true})) %>');
<% end %>
$('#lesson_editor_video_gallery_container').data('page', <%= @page %>);
$('._select_video_from_gallery').addClass('_add_video_to_slide');
