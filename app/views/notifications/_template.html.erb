<div class="_expanded_notification" style="display:none">
  <div class="title">
    <%= notification.title %>
  </div>
  <p class="time _notification_time_<%= notification.id %>">
    <%= notification.time %>
  </p>
  <div class="content">
    <%= notification.message.html_safe %>
  </div>
  <% if notification.basement.present? %>
    <div class="basement">
      <%= notification.basement.html_safe %>
    </div>
  <% end %>
</div>
